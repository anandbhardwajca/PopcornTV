<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_image_params"
    android:background="@color/White"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singleImageItemImageView"
        android:layout_width="@dimen/profile_image_params"
        android:layout_height="@dimen/profile_image_params"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/singleImageItemNameTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/image_view" />

    <ImageView
        android:id="@+id/singleImageItemStatusImageView"
        android:layout_width="@dimen/profile_image_params"
        android:layout_height="@dimen/profile_image_params"
        android:src="@drawable/circle" />
</LinearLayout>